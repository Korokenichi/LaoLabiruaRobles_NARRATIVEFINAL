<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="-50dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/txtStoryOutcome"
            android:layout_width="362dp"
            android:layout_height="136dp"
            android:text="Story Outcome"
            app:layout_constraintBottom_toTopOf="@+id/btnDecision1"
            app:layout_constraintEnd_toEndOf="@+id/txtStoryBackground"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/txtStoryBackground"
            app:layout_constraintTop_toBottomOf="@+id/txtStoryBackground" />

        <TextView
            android:id="@+id/txtStoryBackground"
            android:layout_width="362dp"
            android:layout_height="136dp"
            android:text="Story Background"
            app:layout_constraintBottom_toTopOf="@+id/txtStoryOutcome"
            app:layout_constraintEnd_toEndOf="@+id/Title1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/Title1"
            app:layout_constraintTop_toBottomOf="@+id/Title1" />

        <Button
            android:id="@+id/btnDecision2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decision #2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnDecision1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/btnDecision1"
            app:layout_constraintTop_toBottomOf="@+id/btnDecision1" />

        <Button
            android:id="@+id/btnDecision1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decision #1"
            app:layout_constraintBottom_toTopOf="@+id/btnDecision2"
            app:layout_constraintEnd_toEndOf="@+id/txtStoryOutcome"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/txtStoryOutcome"
            app:layout_constraintTop_toBottomOf="@+id/txtStoryOutcome" />

        <TextView
            android:id="@+id/Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patrick Adventure"
            app:layout_constraintBottom_toTopOf="@+id/txtStoryBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>